{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "layer",
          "config",
          "screen"
        ]
      }
    ],
    "declaration-block-no-redundant-longhand-properties": null,
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "overflow-scrolling"
        ]
      }
    ]
  }
}